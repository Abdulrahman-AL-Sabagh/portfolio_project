generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int              @id @default(autoincrement())
  name              String
  email             String           @unique
  password          String
  avatar            String?
  profileBackground String?
  dateOfBirth       DateTime?
  job               String?
  location          String?
  status            String?
  aboutUser         String?
  gender            String?
  lists             List[]
  friends           UserFriend[]
  posts             UserPost[]
  LikedPosts        LikedPost[]
  BookmarkedPost    BookmarkedPost[]
}

model List {
  id         Int    @id @default(autoincrement())
  title      String @unique
  titleColor String
  userId     Int
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks      Task[]
  color      String
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  deadLine    DateTime?
  titleColor  String?
  listId      Int
  list        List      @relation(fields: [listId], references: [id], onDelete: Cascade)
}

model Post {
  id             Int              @id @default(autoincrement())
  publishedAt    DateTime         @default(now())
  title          String
  description    String
  image          String?
  user           UserPost[]
  LikedPost      LikedPost[]
  BookmarkedPost BookmarkedPost[]
}

model UserPost {
  userId Int
  postId Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  @@id([postId, userId])
}

model LikedPost {
  userId Int
  postId Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  @@id([postId, userId])
}

model BookmarkedPost {
  userId Int
  postId Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  @@id([postId, userId])
}

model OtherSocialMedia {
  id     Int    @id @default(autoincrement())
  userId Int
  name   String

  link String
  Icon String
}

model UserFriend {
  userId   Int 
  friendId Int

  user User @relation(name: "",fields: [userId], references: [id], onDelete: Cascade)
  fiend User @relation(fields: [friendId],references: [id], onDelete: Cascade)
  @@id([userId, friendId])
}
